<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL SHRINKER</title>
    <link type="text/css" rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>

<body>

    <div class="container">
        <div class="jumbotron mt-4">
            <h1>URL SHRINKER</h1>
        </div>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only">Url</label>
            <input placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control mr-2 col" required>
            <button type="submit" class="btn btn-success">Shrink</button>
        </form>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => {%>

                    <tr>
                        <td>
                            <a href="<%= shortUrl.full %>">
                                <%= shortUrl.full %>
                            </a>
                        </td>
                        <td>
                            <a href="<%= shortUrl.short %>">
                                <%= shortUrl.short %>
                            </a>
                        </td>
                        <td><%= shortUrl.clicks %></td>
                    </tr>

                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>